/* pages/gift/index.wxml.wxss */

.box {
  justify-content: space-between;
  margin: 0 auto;
  padding-bottom: 50rpx;
}

.chlid {
  background: #fff;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  box-shadow: 0px 1px 3px #eee;
}

.img {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.img image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 400rpx;
  width: 400rpx;
}

.title {
  font-size: 30rpx;
  padding: 24rpx;
  font-weight: 600;
}

.titleicon {
  font-weight: 100;
  color: #f6a69f;
}

.num {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.number {
  color: #f6a69f;
  font-weight: 600;
}

.integral {
  display: flex;
  padding: 0 24rpx;
  line-height: 74rpx;
  font-size: 28rpx;
}

.dh {
  font-size: 28rpx;
  flex: 1;
  text-align: right;
}

.jf {
  flex: 1;
}

/* 收货地址 */

.addrTitle {
  color: #666;
  font-size: 30rpx;
  line-height: 76rpx;
  padding: 0 24rpx;
}

.inputbox {
  display: flex;
  padding: 0 24rpx;
  font-size: 30rpx;
  /* border-bottom: 1px solid #eee; */
  line-height: 90rpx;
  position: relative;
  background-color: #fff;
}

.inputbox:after {
  content: '';
  position: absolute;
  left: 0;
  bottom:0;
  background: #ccc;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}
.inputbox:last-child::after{
  transform: scale(1);
  height: 0px;
  width: 0
}
.lable {
  color: #ccc;
  line-height: 90rpx;
}

.input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 24rpx;
}
.duihuan{
  text-align: center;
  line-height: 90rpx;
  background-color: #f6a69f;
  color: #fff;
  font-size: 30rpx;
  margin: 50rpx 24rpx;
  border-radius: 10rpx;
}