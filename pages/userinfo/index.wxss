/* pages/userinfo/index.wxss */
.info{
  display: flex;
  padding: 0 24rpx 24rpx;
  color: #fff;
  background: #f6a69f;
}
.h{
  width: 90rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
  padding: 5rpx;
  height:90rpx;
}
.name{
  flex: 1;
  line-height: 90rpx;
  padding-left: 24rpx;
  font-size: 30rpx;
}
.list{
  display: flex;
  line-height: 110rpx;
  font-size: 32rpx;
  color: #666;
  padding: 0 24rpx;
  position: relative;
  background-color: #fff;
}
.list:after {
  content: '';
  position: absolute;
  left: 0;
  bottom:0;
  background: #ccc;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}
.list:last-child::after{
  transform: scale(1);
  height: 0px;
  width: 0
}
.text{
  flex: 1;
}
.icon{
  margin-right:24rpx;
  color: #f6a69f; 
  font-size: 50rpx;
}
.right{
  font-size: 40rpx;
}