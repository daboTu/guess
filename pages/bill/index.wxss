/* pages/bill/index.wxss */
.list{
  display: flex;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #666;
  padding: 30rpx 24rpx;
  position: relative;
  background-color: #fff;
}
.list:after {
  content: '';
  position: absolute;
  left: 0;
  bottom:0;
  background: #ccc;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}
.list:last-child::after{
  transform: scale(1);
  height: 0px;
  width: 0
}
.text{
  flex: 1;
}
.icon{
  margin-right:24rpx;
  color: #f6a69f; 
  font-size: 50rpx;
}
.right{
  font-size: 30rpx;
}
.time{
  font-size: 28rpx;
}