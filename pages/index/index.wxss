/*
  这是一个轮播 的插件
*/

.list swiper {
  width: 750rpx;
  height: 410rpx;
}

.list swiper-item {
  padding-top: 30rpx;
}

.list .cards {
  width: 96%;
  height: 330rpx;
  position: absolute;
  background-color: #daf9ca;
  box-shadow: -0px 3px 8px 0px #ecdddd;
  border-radius: 20rpx;
  transform: translateX(-50%);
  left: 50%;
}

.list .cards.active {
  transition: all 0.2s ease-in 0s;
}

.ioce {
  width: 287rpx;
  height: 287rpx;
}

.text {
  color: #fff;
  margin-top: 24rpx;
  font-weight: bold;
}

